{
  "name": "codex-electron",
  "private": true,
  "version": "0.1.0",
  "description": "Codex Desktop - AI Coding Assistant",
  "author": "William",
  "type": "commonjs",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "build": "vite build",
    "preview": "vite preview",
    "dist": "vite build && electron-builder",
    "dist:win": "vite build && electron-builder --win",
    "dist:mac": "vite build && electron-builder --mac",
    "dist:linux": "vite build && electron-builder --linux"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.codex.desktop",
    "productName": "Codex Desktop",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/renderer/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": "portable",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": "dmg",
      "icon": "electron/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "electron/icon.png"
    }
  }
}
